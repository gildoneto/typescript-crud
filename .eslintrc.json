{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "standard",
    "plugin:@typescript-eslint/recommended",
    "prettier/@typescript-eslint",
    "plugin:prettier/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "prettier"
  ],
  "rules": {
    "@typescript-eslint/camelcase": "off",
    "prettier/prettier": "warn",
    "camelcase": "off",
    "no-useless-constructor": "off",
    "import/extensions": [
      "off",
      "ignorePackages",
      {
        "ts": "never"
      }
    ]
  }
}
